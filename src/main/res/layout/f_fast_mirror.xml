<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/mirror_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/castBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/mirror_surface"
        android:layout_alignRight="@id/mirror_surface"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_cast_white" />

    <Button
        android:id="@+id/stopCastBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:stateListAnimator="@null"
        android:text="停止镜像" />


    <!-- 提供一个全屏的容器用于显示搜索界面  -->
    <LinearLayout
        android:id="@+id/browseContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</RelativeLayout>
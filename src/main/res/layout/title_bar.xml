<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_ib"
        android:layout_width="@dimen/dp_positive_40"
        android:layout_height="@dimen/dp_positive_40"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/back_black_button"

        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/gray_333333"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/title_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_positive_25"
        android:textColor="@color/black_3"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:visibility="gone" />
</RelativeLayout>
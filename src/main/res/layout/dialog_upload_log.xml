<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/title_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="日志上报"
        android:textColor="#000000"
        android:textSize="@dimen/btn_text_size"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_0"
        android:text="错误码："
        android:textColor="#000000"
        android:textSize="@dimen/btn_text_size" />


    <EditText
        android:id="@+id/log_err_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_1"
        android:hint="多个错误码用 , 隔开 "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />


    <TextView
        android:id="@+id/title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_err_code_et"
        android:layout_marginTop="20dp"
        android:text="电话号码："
        android:textColor="#000000"
        android:textSize="@dimen/btn_text_size" />


    <EditText
        android:id="@+id/log_pn_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />


    <Button
        android:id="@+id/cancle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_pn_et"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:text="取消"
        android:textSize="@dimen/btn_text_size" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_pn_et"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:text="确认"
        android:textSize="@dimen/btn_text_size" />
</RelativeLayout>
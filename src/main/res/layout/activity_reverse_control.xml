<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".activity.ReverseControlActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反控为收费功能，如有需要，可联系乐播商务\n0755-33942655"
                android:textColor="#ff0000"
                android:textSize="@dimen/btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="触摸反控参数设置:"
                    android:textColor="#000000"
                    android:textSize="@dimen/btn_text_size" />

                <EditText
                    android:id="@+id/et_scale_modulus"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="1.0"
                    android:textColor="#000000"
                    android:textSize="@dimen/btn_text_size" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="以下图标用于演示反控效果"
            android:textColor="#000000"
            android:textSize="@dimen/btn_text_size" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_key_up"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_remote_up"
                    tools:layout_editor_absoluteY="45dp" />

                <ImageView
                    android:id="@+id/iv_key_ok"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_remote_ok"
                    tools:layout_editor_absoluteY="45dp" />

                <ImageView
                    android:id="@+id/iv_key_down"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_remote_down"
                    tools:layout_editor_absoluteY="45dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="96dp">

                <ImageView
                    android:id="@+id/iv_key_left"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_remote_left"
                    tools:layout_editor_absoluteY="45dp" />

                <ImageView
                    android:id="@+id/iv_key_right"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_remote_right"
                    tools:layout_editor_absoluteY="45dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="250dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_key_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_remote_back"
                    tools:layout_editor_absoluteY="45dp" />

                <ImageView
                    android:id="@+id/iv_key_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_remote_settings"
                    tools:layout_editor_absoluteY="45dp" />

            </FrameLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_scale"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_scale"
            android:scaleType="centerInside" />

    </LinearLayout>
</ScrollView>